  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.1.3",
    "mocha": "^8.4.0",
    "mock-browser": "^0.92.14",
    "semantic-release": "^17.4.2",
    "semantic-release-chrome": "^3.1.0",
